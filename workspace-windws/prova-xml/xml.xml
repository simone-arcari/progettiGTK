<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <object id="window" class="GtkWindow">
        <property name="title">Prova XML</property>

        <child>
            <object id="main_container" class="GtkBox">
                <property name="orientation">GTK_ORIENTATION_VERTICAL</property>
                <property name="spacing">5</property>


                <child>    
                    <object id="box1" class="GtkBox">
                        <property name="orientation">GTK_ORIENTATION_VERTICAL</property>
                        <property name="spacing">5</property>

                        <child>
                            <object id="button1" class="GtkButton">
                                <property name="label">button 1</property>
                            </object>
                        </child>

                        <child>
                            <object id="button2" class="GtkButton">
                                <property name="label">button 2</property>
                            </object>
                        </child>
                    </object>
                </child>


                <child>    
                    <object id="box2" class="GtkBox">
                        <property name="orientation">GTK_ORIENTATION_HORIZONTAL</property>
                        <property name="spacing">5</property>

                        <child>
                            <object id="button3" class="GtkButton">
                                <property name="label">button 3</property>
                            </object>
                        </child>

                        <child>
                            <object id="button4" class="GtkButton">
                                <property name="label">button 4</property>
                            </object>
                        </child>

                        <child>
                            <object id="valeria_button" class="GtkButton">
                                <property name="label">Tasto Valeria da non premere!</property>
                            </object>
                        </child>
                    </object>
                </child>


                <child>
                    <object id="grid" class="GtkGrid">
                        <child>
                            <object id="button5" class="GtkButton">
                                <property name="label">Button 5</property>
                                <layout>
                                    <property name="column">0</property>
                                    <property name="row">0</property>
                                </layout>
                            </object>
                        </child>

                        <child>
                            <object id="button6" class="GtkButton">
                                <property name="label">Button 6</property>
                                <layout>
                                    <property name="column">0</property>
                                    <property name="row">1</property>
                                </layout>
                            </object>
                        </child>

                        <child>
                            <object id="quit" class="GtkButton">
                                <property name="label">quit</property>
                                <layout>
                                    <property name="column">1</property>
                                    <property name="row">0</property>
                                    <property name="row-span">2</property>
                                </layout>
                            </object>
                        </child>
                    </object>
                </child>


                <child>    
                    <object id="box3" class="GtkBox">
                        <property name="orientation">GTK_ORIENTATION_VERTICAL</property>
                        <property name="spacing">50</property>
                        <property name="halign">GTK_ALIGN_CENTER</property>
                        <property name="valign">GTK_ALIGN_CENTER</property>

                        <child>
                            <object id="button7" class="GtkButton">
                                <property name="label">button 7</property>
                            </object>
                        </child>

                        <child>
                            <object id="button8" class="GtkButton">
                                <property name="label">button 8</property>
                            </object>
                        </child>
                    </object>
                </child>
            </object>
        </child>
    </object>
</interface>